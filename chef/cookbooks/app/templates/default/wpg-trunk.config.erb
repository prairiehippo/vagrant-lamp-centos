
# The name prefix for your PBs (so you know which are yours on Secure Site)
pb_name="<%= @my_name %>"

# The URL to your Spark to configure B2B and B2C callback URLs. Use the static IP of your host machine.
spark_url="http://<%= @my_static_ip %>:8000/wpg.trunk"

# Directory name under Drupal "sites"
sitesdir="wpg.trunk"

# Spark DB URL
dburl="mysqli://root:root@localhost:3306/wpg.trunk" \

# Spark Site Name
sitename="Trunk"

# Admin Email
adminemail="wpg.trunk.admin@benevity.org"

# Site Email
siteemail="wpg.trunk@benevity.org"

# Admin Password
adminpass="password"

# Site Default Timezone
timezone_name="America/Edmonton"

# SMTP host
smtphost="localhost"

# SMTP port (mailcatcher)
smtpport="1080"

# File that will contain the last PB code created by create_spark_pb.sh
latest_pb_file="/www/wpg_trunk_pb.txt"

# API Company Code. Leave blank and you will be prompted to use the value $latest_pb_file
api_company=""

# API HMAC Key
api_key="wpg"

# Company Account Countries
api_country="124 840 826 036 372 702"

# Receipt URL
api_receipt_url="http://receipts.trunk"

# API Base URL
api_base="http://192.168.2.115:8080"


# Stuff for auto-creating PBs

# Java Server IP. You'll be prompted for the SSH password.
# trunk-sandbox is 192.168.2.115
# branch-sandbox is 192.168.2.84
api_server="192.168.2.115"